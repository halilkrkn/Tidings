<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/text_view_breaking_news_title"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/black"
            tools:text="Title" />

        <ImageView
            android:id="@+id/image_view_image"
            android:layout_width="385dp"
            android:layout_height="167dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/text_view_breaking_news_description"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_edit_24"
            tools:text="Description" />

        <TextView
            android:id="@+id/text_view_breaking_news_date"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_update_24"
            tools:text="publishedAt" />


    </LinearLayout>


</androidx.cardview.widget.CardView>